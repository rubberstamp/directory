<% content_for :title, "Apply to be a Podcast Guest - The Gross Profit Podcast" %>

<main class="container mx-auto mt-20 mb-12 p-6 max-w-5xl">
  <section class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-md rounded-xl shadow-custom p-6 md:p-10 border border-gray-100 dark:border-gray-700">
    <h1 class="text-4xl font-bold text-blue-700 dark:text-blue-400 mb-6 text-center">Apply to be a Podcast Guest</h1>
    
    <div class="mb-8">
      <p class="text-gray-700 dark:text-gray-300 text-lg mb-6 max-w-3xl mx-auto text-center">
        We're looking for accounting and finance professionals to share their expertise on The Gross Profit Podcast. Apply below to be considered as a guest.
      </p>
    </div>
    
    <% if flash[:error].present? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= flash[:error] %></span>
      </div>
    <% end %>
    
    <% if flash[:success].present? %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= flash[:success] %></span>
      </div>
    <% end %>
    
    <%= form_with model: @guest_message, url: guest_messages_path, class: "space-y-6 bg-white/50 dark:bg-gray-700/50 backdrop-blur-md rounded-xl p-6 shadow-md border border-gray-100 dark:border-gray-600 max-w-3xl mx-auto", local: true do |form| %>
      <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-200 mb-4">Your Information</h2>
      
      <%= form.hidden_field :is_podcast_application, value: true %>
      
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <label for="sender_name" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Your Name <span class="text-red-500">*</span></label>
          <%= form.text_field :sender_name, placeholder: "Full Name", required: true, class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-300 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 dark:bg-gray-800 dark:border-gray-700" %>
        </div>
        
        <div>
          <label for="sender_email" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Email Address <span class="text-red-500">*</span></label>
          <%= form.email_field :sender_email, placeholder: "your.email@example.com", required: true, class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-300 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 dark:bg-gray-800 dark:border-gray-700" %>
        </div>
      </div>
      
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <label for="location" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Your Location <span class="text-red-500">*</span></label>
          <%= form.text_field :location, placeholder: "City, Country", required: true, class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-300 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 dark:bg-gray-800 dark:border-gray-700" %>
        </div>
        
        <div>
          <label for="practice_size" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Practice/Company Size <span class="text-red-500">*</span></label>
          <%= form.select :practice_size, 
              [
                ["Solo Practice", "Solo"],
                ["Small (2-10 employees)", "Small"],
                ["Medium (11-50 employees)", "Medium"],
                ["Large (51-200 employees)", "Large"],
                ["Enterprise (200+ employees)", "Enterprise"]
              ],
              { include_blank: "Select your practice size" },
              { required: true, class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-300 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 dark:bg-gray-800 dark:border-gray-700" }
          %>
        </div>
      </div>
      
      <div>
        <label for="specialty" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Specialty/Expertise <span class="text-red-500">*</span></label>
        <%= form.text_field :specialty, placeholder: "e.g. Tax Advisory, Auditing, Financial Planning", required: true, class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-300 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 dark:bg-gray-800 dark:border-gray-700" %>
      </div>
      
      <div>
        <label for="subject" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Proposed Topic</label>
        <%= form.text_field :subject, placeholder: "What would you like to discuss on the podcast?", class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-300 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 dark:bg-gray-800 dark:border-gray-700" %>
      </div>
      
      <div>
        <label for="message" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Tell Us About Yourself <span class="text-red-500">*</span></label>
        <%= form.text_area :message, placeholder: "Share a bit about your background, experience, and why you'd be a great podcast guest...", required: true, rows: 6, class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-300 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 dark:bg-gray-800 dark:border-gray-700" %>
      </div>
      
      <div class="pt-4">
        <%= form.submit "Submit Application", class: "bg-brand-orange hover:bg-opacity-90 text-white font-semibold py-3 px-6 rounded-full text-lg transition duration-300 shadow-md hover:shadow-xl w-full cursor-pointer" %>
      </div>
    <% end %>
  </section>
</main>