<% content_for :title, "Contact Us - The Gross Profit Podcast" %>

<main class="container mx-auto mt-20 mb-12 p-6 max-w-5xl">
  <section class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-md rounded-xl shadow-custom p-6 md:p-10 border border-gray-100 dark:border-gray-700">
    <h1 class="text-4xl font-bold text-blue-700 dark:text-blue-400 mb-6 text-center">Contact Us</h1>
    
    <div class="grid md:grid-cols-2 gap-8">
      <div>
        <div class="mb-8">
          <h2 class="text-2xl font-semibold text-blue-700 dark:text-blue-400 mb-4">Get In Touch</h2>
          <p class="text-gray-700 dark:text-gray-300 text-lg mb-6">
            Have questions about the podcast? Want to suggest a guest or topic? We'd love to hear from you. Fill out the form and we'll get back to you as soon as possible.
          </p>
          
          <div class="space-y-4">
            <div class="flex items-start">
              <div class="bg-blue-100 dark:bg-blue-900 rounded-full p-3 mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 dark:text-blue-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">Email</h3>
                <a href="mailto:podcast@procurementexpress.com" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300">podcast@procurementexpress.com</a>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-blue-100 dark:bg-blue-900 rounded-full p-3 mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 dark:text-blue-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">Phone</h3>
                <a href="tel:+35319010336" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300">+353 1 901 0336</a>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-blue-100 dark:bg-blue-900 rounded-full p-3 mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 dark:text-blue-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">Social Media</h3>
                <div class="mt-2 space-x-3">
                  <a href="#" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 inline-block">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16">
                      <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                    </svg>
                  </a>
                  <a href="#" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 inline-block">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-twitter" viewBox="0 0 16 16">
                      <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-semibold text-blue-700 dark:text-blue-400 mb-4">Subscribe to Our Newsletter</h2>
          <p class="text-gray-700 dark:text-gray-300 mb-4">Stay up to date with our latest podcast episodes and news.</p>
          
          <%= form_with url: subscribe_path, class: "flex flex-col sm:flex-row gap-2", local: true do |form| %>
            <div class="flex-grow">
              <%= form.email_field :email, placeholder: "Your Email", required: true, class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-300 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 dark:bg-gray-800 dark:border-gray-700" %>
            </div>
            <%= form.submit "Subscribe", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded text-base transition duration-300 shadow-md hover:shadow-xl cursor-pointer whitespace-nowrap" %>
          <% end %>
        </div>
      </div>
      
      <div>
        <% if flash[:error].present? %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline"><%= flash[:error] %></span>
          </div>
        <% end %>
        
        <% if flash[:success].present? %>
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline"><%= flash[:success] %></span>
          </div>
        <% end %>
        
        <%= form_with url: contacts_path, class: "space-y-6 bg-white/50 dark:bg-gray-700/50 backdrop-blur-md rounded-xl p-6 shadow-md border border-gray-100 dark:border-gray-600", local: true do |form| %>
          <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-200 mb-4">Send Us a Message</h2>
          
          <div>
            <label for="name" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Name</label>
            <%= form.text_field :name, placeholder: "Your Name", class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-300 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 dark:bg-gray-800 dark:border-gray-700" %>
          </div>
          
          <div>
            <label for="email" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Email</label>
            <%= form.email_field :email, placeholder: "Your Email", required: true, class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-300 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 dark:bg-gray-800 dark:border-gray-700" %>
          </div>
          
          <div>
            <label for="phone" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Phone Number</label>
            <%= form.telephone_field :phone, placeholder: "Your Phone Number", class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-300 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 dark:bg-gray-800 dark:border-gray-700" %>
          </div>
          
          <div>
            <label for="message" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Message</label>
            <%= form.text_area :message, placeholder: "Your Message", required: true, rows: 6, class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-300 leading-tight focus:outline-none focus:shadow-outline bg-gray-50 dark:bg-gray-800 dark:border-gray-700" %>
          </div>
          
          <div class="pt-2">
            <%= form.submit "Send Message", class: "bg-brand-orange hover:bg-opacity-90 text-white font-semibold py-3 px-6 rounded-full text-lg transition duration-300 shadow-md hover:shadow-xl w-full cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</main>