<div class="container mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Profile Headshots Management</h1>
  </div>
  
  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-6">
    <div class="bg-white dark:bg-gray-800 p-4 rounded shadow">
      <h3 class="text-lg font-medium mb-2">Total Profiles</h3>
      <p class="text-3xl font-bold"><%= @profile_count %></p>
    </div>
    <div class="bg-white dark:bg-gray-800 p-4 rounded shadow">
      <h3 class="text-lg font-medium mb-2">With Headshots</h3>
      <p class="text-3xl font-bold"><%= @profiles_with_headshots %></p>
      <p class="text-sm text-gray-500"><%= (@profiles_with_headshots.to_f / @profile_count * 100).round(1) %>%</p>
    </div>
    <div class="bg-white dark:bg-gray-800 p-4 rounded shadow">
      <h3 class="text-lg font-medium mb-2">Local Images</h3>
      <p class="text-3xl font-bold"><%= @profiles_with_local_images %></p>
    </div>
    <div class="bg-white dark:bg-gray-800 p-4 rounded shadow">
      <h3 class="text-lg font-medium mb-2">Placeholder Avatars</h3>
      <p class="text-3xl font-bold"><%= @profiles_with_placeholder_avatars %></p>
    </div>
    <div class="bg-white dark:bg-gray-800 p-4 rounded shadow <% if @profiles_with_google_drive_links > 0 %>bg-yellow-50 dark:bg-yellow-900/20 border-yellow-200 dark:border-yellow-900 border<% end %>">
      <h3 class="text-lg font-medium mb-2">Google Drive Links</h3>
      <p class="text-3xl font-bold"><%= @profiles_with_google_drive_links %></p>
      <% if @profiles_with_google_drive_links > 0 %>
        <p class="text-sm text-yellow-600 dark:text-yellow-400">Needs processing</p>
      <% end %>
    </div>
  </div>
  
  <!-- Bulk Actions -->
  <div class="bg-white dark:bg-gray-800 p-6 rounded shadow mb-6">
    <h2 class="text-xl font-bold mb-4">Bulk Actions</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-lg font-semibold mb-2">Import from Google Drive</h3>
        <p class="mb-4 text-gray-600 dark:text-gray-400">
          Process Google Drive links and save images locally. 
          This works best with a Google API key.
        </p>
        
        <%= form_tag run_import_admin_headshots_path, method: :post do %>
          <div class="flex items-center space-x-2">
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
              </svg>
              Start Import
            </button>
            <div class="text-sm text-gray-500">
              This runs in the background. Refresh page to see results.
            </div>
          </div>
        <% end %>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold mb-2">Generate Placeholder Avatars</h3>
        <p class="mb-4 text-gray-600 dark:text-gray-400">
          Create initial-based avatars for profiles without headshots.
          Uses UI Avatars service - no local storage needed.
        </p>
        
        <%= form_tag "#", method: :post do %>
          <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Generate Placeholders
          </button>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Profiles Needing Attention -->
  <div class="bg-white dark:bg-gray-800 rounded shadow overflow-hidden">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-xl font-bold">Profiles Needing Attention</h2>
      <p class="text-gray-600 dark:text-gray-400">
        These profiles either have Google Drive links or no headshots at all.
      </p>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-900">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Profile
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Current Headshot
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              URL
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          <% if @profiles_needing_attention.any? %>
            <% @profiles_needing_attention.each do |profile| %>
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div>
                      <div class="text-sm font-medium text-gray-900 dark:text-white">
                        <%= profile.name %>
                      </div>
                      <div class="text-sm text-gray-500 dark:text-gray-400">
                        <%= profile.company if profile.company.present? %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if profile.headshot_url.present? %>
                    <% if profile.headshot_url.start_with?('/uploads/') %>
                      <img src="<%= profile.headshot_url %>" alt="<%= profile.name %>" class="h-16 w-16 rounded-full object-cover">
                    <% elsif profile.headshot_url.include?('drive.google.com') %>
                      <div class="flex items-center space-x-2">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-800 dark:text-yellow-200">
                          Google Drive
                        </span>
                      </div>
                    <% elsif profile.headshot_url.include?('ui-avatars.com') %>
                      <img src="<%= profile.headshot_url %>" alt="<%= profile.name %>" class="h-16 w-16 rounded-full">
                      <div class="mt-1 text-xs text-gray-500">Placeholder</div>
                    <% else %>
                      <img src="<%= profile.headshot_url %>" alt="<%= profile.name %>" class="h-16 w-16 rounded-full object-cover">
                    <% end %>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-800 dark:text-red-200">
                      No headshot
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4">
                  <% if profile.headshot_url.present? %>
                    <div class="max-w-xs truncate text-sm text-gray-500 dark:text-gray-400">
                      <%= profile.headshot_url %>
                    </div>
                  <% else %>
                    <span class="text-xs text-gray-400 dark:text-gray-600">None</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex space-x-2">
                    <!-- Button to upload a new headshot -->
                    <button type="button" class="text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300" onclick="document.getElementById('upload-form-<%= profile.id %>').classList.toggle('hidden')">
                      Upload
                    </button>
                    
                    <!-- Button to create placeholder -->
                    <%= link_to "Placeholder", create_placeholder_admin_headshot_path(profile), method: :post, class: "text-purple-600 hover:text-purple-900 dark:text-purple-400 dark:hover:text-purple-300" %>
                    
                    <!-- Button to view profile -->
                    <%= link_to "View Profile", admin_profile_path(profile), class: "text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300" %>
                  </div>
                  
                  <!-- Hidden upload form -->
                  <div id="upload-form-<%= profile.id %>" class="hidden mt-4 p-4 bg-gray-50 dark:bg-gray-700 rounded-md">
                    <%= form_for profile, url: admin_headshot_path(profile), method: :patch, multipart: true, html: { class: "space-y-4" } do |f| %>
                      <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Upload image</label>
                        <%= f.file_field :headshot_image, class: "mt-1 block w-full text-sm text-gray-900 dark:text-gray-300
                                                           file:mr-4 file:py-2 file:px-4
                                                           file:rounded-md file:border-0
                                                           file:text-sm file:font-semibold
                                                           file:bg-indigo-50 file:text-indigo-700
                                                           dark:file:bg-indigo-900 dark:file:text-indigo-300
                                                           hover:file:bg-indigo-100 dark:hover:file:bg-indigo-800" %>
                      </div>
                      
                      <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Or enter URL</label>
                        <input type="text" name="headshot_url" placeholder="https://example.com/image.jpg" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                      </div>
                      
                      <div class="flex justify-end space-x-2">
                        <button type="button" onclick="document.getElementById('upload-form-<%= profile.id %>').classList.add('hidden')" class="px-3 py-1.5 border border-gray-300 dark:border-gray-600 text-sm rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700">
                          Cancel
                        </button>
                        <button type="submit" class="px-3 py-1.5 border border-transparent text-sm rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">
                          Save
                        </button>
                      </div>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">
                No profiles need attention. All profiles have proper headshots.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <!-- Pagination -->
    <% if @profiles_needing_attention.respond_to?(:total_pages) && @profiles_needing_attention.total_pages > 1 %>
      <div class="bg-white dark:bg-gray-800 px-4 py-3 flex items-center justify-between border-t border-gray-200 dark:border-gray-700 sm:px-6">
        <div class="flex-1 flex justify-between sm:hidden">
          <%= link_to_prev_page @profiles_needing_attention, 'Previous', class: 'relative inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700' %>
          <%= link_to_next_page @profiles_needing_attention, 'Next', class: 'ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700' %>
        </div>
        <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
          <div>
            <p class="text-sm text-gray-700 dark:text-gray-300">
              Showing <span class="font-medium"><%= @profiles_needing_attention.offset_value + 1 %></span>
              to <span class="font-medium"><%= @profiles_needing_attention.offset_value + @profiles_needing_attention.count %></span>
              of <span class="font-medium"><%= @profiles_needing_attention.total_count %></span> results
            </p>
          </div>
          <div>
            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
              <%= paginate @profiles_needing_attention %>
            </nav>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>