<div class="container mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Edit Profile</h1>
    <div class="flex space-x-2">
      <%= link_to "View Profile", admin_profile_path(@profile), class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      <%= link_to "Back to Profiles", admin_profiles_path, class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700" %>
    </div>
  </div>
  
  <%= render 'form', profile: @profile %>
</div>