<%= form_with(model: [:admin, profile]) do |form| %>
  <% if profile.errors.any? %>
    <div class="rounded-md bg-red-50 dark:bg-red-900/20 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400 dark:text-red-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">There <%= "was an error".pluralize(profile.errors.count) %> with your submission</h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300">
            <ul class="list-disc space-y-1 pl-5">
              <% profile.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100 mb-4">Basic Information</h2>
      <div class="grid grid-cols-2 gap-6">
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.text_field :name, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        
        <div>
          <%= form.label :headline, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.text_field :headline, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        
        <div>
          <%= form.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.email_field :email, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        
        <div>
          <%= form.label :phone, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.text_field :phone, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        
        <div>
          <%= form.label :location, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.text_field :location, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        
        <div>
          <%= form.label :mailing_address, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.text_field :mailing_address, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
      </div>
    </div>
    
    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100 mb-4">Company Information</h2>
      <div class="grid grid-cols-2 gap-6">
        <div>
          <%= form.label :company, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.text_field :company, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        
        <div>
          <%= form.label :website, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.url_field :website, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "https://example.com" %>
        </div>
      </div>
    </div>
    
    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100 mb-4">Social Media</h2>
      <div class="grid grid-cols-2 gap-6">
        <div>
          <%= form.label :linkedin_url, "LinkedIn Profile", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.url_field :linkedin_url, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "https://linkedin.com/in/username" %>
        </div>
        
        <div>
          <%= form.label :twitter_url, "Twitter/X Profile", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.url_field :twitter_url, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "https://twitter.com/username" %>
        </div>
        
        <div>
          <%= form.label :facebook_url, "Facebook Page", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.url_field :facebook_url, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "https://facebook.com/username" %>
        </div>
        
        <div>
          <%= form.label :instagram_url, "Instagram Profile", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.url_field :instagram_url, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "https://instagram.com/username" %>
        </div>
        
        <div>
          <%= form.label :youtube_url, "YouTube Channel", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.url_field :youtube_url, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "https://youtube.com/@username" %>
        </div>
        
        <div>
          <%= form.label :tiktok_url, "TikTok Profile", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.url_field :tiktok_url, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "https://tiktok.com/@username" %>
        </div>
      </div>
    </div>
    
    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100 mb-4">Profile Image</h2>
      
      <!-- ActiveStorage Headshot -->
      <div class="mb-6">
        <% if profile.headshot.attached? %>
          <div class="mb-4">
            <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Current Headshot (ActiveStorage)</p>
            <div class="flex items-center space-x-4">
              <%= image_tag profile.headshot, class: "h-24 w-24 rounded-full object-cover border-2 border-gray-200 dark:border-gray-700" %>
              <div>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  <%= profile.headshot.filename %> (<%= number_to_human_size(profile.headshot.byte_size) %>)
                </p>
                <% if profile.headshot.metadata[:width] && profile.headshot.metadata[:height] %>
                  <p class="text-xs text-gray-500 dark:text-gray-500">
                    <%= profile.headshot.metadata[:width] %>x<%= profile.headshot.metadata[:height] %>
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        
        <div>
          <%= form.label :headshot, "Upload New Headshot", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.file_field :headshot, 
              direct_upload: true, 
              accept: "image/jpeg,image/png,image/gif", 
              class: "block w-full text-sm text-gray-900 dark:text-gray-300
                     file:mr-4 file:py-2 file:px-4
                     file:rounded-md file:border-0
                     file:text-sm file:font-semibold
                     file:bg-indigo-50 file:text-indigo-700
                     dark:file:bg-indigo-900 dark:file:text-indigo-300
                     hover:file:bg-indigo-100 dark:hover:file:bg-indigo-800" %>
          <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
            Recommended size: 500x500 pixels or larger. JPEG, PNG, and GIF formats accepted.
          </p>
        </div>
      </div>
      
      <!-- Legacy Image URLs (with notice) -->
      <div class="mt-6 bg-gray-50 dark:bg-gray-700/50 p-4 rounded-md border border-gray-200 dark:border-gray-600">
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Legacy Image URLs</h3>
        <p class="text-xs text-gray-500 dark:text-gray-400 mb-4">These fields are being phased out in favor of ActiveStorage uploads. Please use the headshot uploader above whenever possible.</p>
        
        <div>
          <%= form.label :image_url, "Profile Image URL (Legacy)", class: "block text-sm font-medium text-gray-500 dark:text-gray-400 mb-1" %>
          <%= form.url_field :image_url, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "https://example.com/image.jpg" %>
        </div>
        
        <div class="mt-3">
          <%= form.label :headshot_url, "Alternative Headshot URL (Legacy)", class: "block text-sm font-medium text-gray-500 dark:text-gray-400 mb-1" %>
          <%= form.url_field :headshot_url, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "https://example.com/headshot.jpg" %>
        </div>
        
        <!-- Display current legacy headshot if exists -->
        <% if !profile.headshot.attached? && profile.headshot_url.present? %>
          <div class="mt-4">
            <p class="text-xs text-gray-500 dark:text-gray-400 mb-2">Current legacy headshot:</p>
            <div class="flex items-center">
              <img src="<%= profile.headshot_url %>" alt="<%= profile.name %>'s headshot" class="h-16 w-16 rounded-full object-cover border border-gray-200 dark:border-gray-700">
              <span class="ml-3 text-xs text-gray-500 truncate max-w-md"><%= profile.headshot_url %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100 mb-4">Podcast Information</h2>
      
      <div class="mb-6">
        <div class="flex items-center">
          <%= form.check_box :interested_in_procurement, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
          <%= form.label :interested_in_procurement, "Interested in Procurement Express", class: "ml-2 block text-sm text-gray-700 dark:text-gray-300" %>
        </div>
      </div>
      
      <div class="mb-6">
        <%= form.label :submission_date, "Guest Submission Date", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= form.date_field :submission_date, class: "block w-full sm:w-1/3 rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      
      <div class="mb-6">
        <%= form.label :testimonial, "Podcast Testimonial", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= form.text_area :testimonial, rows: 3, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      
      <div class="mt-6 bg-gray-50 dark:bg-gray-700/50 p-4 rounded-md border border-gray-200 dark:border-gray-600">
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Legacy Episode Data</h3>
        <p class="text-xs text-gray-500 dark:text-gray-400 mb-4">These fields are deprecated. Please use the Episodes section to manage profile episodes.</p>
        
        <div class="grid grid-cols-2 gap-6">
          <div>
            <%= form.label :deprecated_episode_number, "Episode Number (Deprecated)", class: "block text-sm font-medium text-gray-500 dark:text-gray-400 mb-1" %>
            <%= form.number_field :deprecated_episode_number, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
          
          <div>
            <%= form.label :deprecated_episode_date, "Air Date (Deprecated)", class: "block text-sm font-medium text-gray-500 dark:text-gray-400 mb-1" %>
            <%= form.date_field :deprecated_episode_date, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
          
          <div class="col-span-2">
            <%= form.label :deprecated_episode_title, "Episode Title (Deprecated)", class: "block text-sm font-medium text-gray-500 dark:text-gray-400 mb-1" %>
            <%= form.text_field :deprecated_episode_title, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
          
          <div class="col-span-2">
            <%= form.label :deprecated_episode_url, "YouTube URL or Video ID (Deprecated)", class: "block text-sm font-medium text-gray-500 dark:text-gray-400 mb-1" %>
            <%= form.text_field :deprecated_episode_url, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "https://www.youtube.com/watch?v=XXXXXXXXXX or just XXXXXXXXXX" %>
          </div>
        </div>
      </div>
    </div>

    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100 mb-4">Biography</h2>
      <div>
        <%= form.label :bio, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= form.text_area :bio, rows: 5, class: "block w-full rounded-md border-gray-300 dark:border-gray-700 dark:bg-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
    </div>

    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100 mb-4">Specializations</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <%= form.collection_check_boxes :specialization_ids, Specialization.all, :id, :name do |b| %>
          <div class="relative flex items-start">
            <div class="flex items-center h-5">
              <%= b.check_box class: "h-4 w-4 rounded border-gray-300 dark:border-gray-700 text-indigo-600 focus:ring-indigo-500" %>
            </div>
            <div class="ml-3 text-sm">
              <%= b.label class: "font-medium text-gray-700 dark:text-gray-300" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="px-6 py-4 bg-gray-50 dark:bg-gray-700/50 text-right">
      <div class="inline-flex items-center">
        <%= link_to "Cancel", admin_profiles_path, class: "mr-4 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= form.submit class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  </div>
<% end %>