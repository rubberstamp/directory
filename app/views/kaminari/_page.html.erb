<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="page<%= ' current' if page.current? %>">
  <% if page.current? %>
    <span class="relative inline-flex items-center px-4 py-2 border border-brand-blue bg-brand-blue text-sm font-medium text-white">
      <%= page %>
    </span>
  <% else %>
    <%= link_to page, url, {remote: remote, rel: page.rel, class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50"} %>
  <% end %>
</span>